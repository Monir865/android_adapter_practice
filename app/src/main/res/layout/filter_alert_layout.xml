<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:id="@+id/filter_alert_layout">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="#2077FA"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Min-Price"
        android:inputType="number"
        android:ems="14"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittext_primary_style"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:id="@+id/min_price_et"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Max-Price"
        android:inputType="number"
        android:ems="14"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittext_primary_style"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:id="@+id/max_price_et"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Product Brand"
        android:inputType="text"
        android:ems="14"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittext_primary_style"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:id="@+id/product_brand_et"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Filter Now"
        android:layout_gravity="center_horizontal"
        android:id="@+id/filter_now_btn"/>



</LinearLayout>